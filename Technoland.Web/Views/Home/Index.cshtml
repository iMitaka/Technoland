@model Technoland.Web.Models.HomePageModels
@{
    ViewBag.Title = "Home Page";
}
<style>
    .img-responsive {
        max-width: 70%;
    }
</style>
<div class="well">
    <h1 class="text-success"><strong>ТОП 6 Най-популярни смартфони:</strong></h1>
</div>

<div class="row">

    @for (int i = 0; i < Model.SmartphoneViewModel.Count(); i++)
    {

        var smartphone = Model.SmartphoneViewModel.ElementAt(i);

        <div class="col-md-4 panel-primary">
            <p><a href="@Url.Action("Details", "Smartphones", new { smartphone.Id })"><img class="center-block img-responsive" src="@smartphone.ImageUrl" /></a></p>
            <h5 class="text-center"><strong>(@smartphone.Votes гласа)</strong></h5>
            <hr />
            <a href="@Url.Action("Details", "Smartphones", new { smartphone.Id })"><h3 class="text-center">@smartphone.Manufacturer @smartphone.Model</h3></a>
            <p><a class="btn center-block btn-success" href="@Url.Action("Details", "Smartphones", new { smartphone.Id })">Цена: @smartphone.Price лв.</a></p>
        </div>

        if (i > 0 && (i + 1) % 3 == 0)
        {
            @:</div>
        @:<div class="row">
    }
    }
</div>
<br />
<div>
    <p><a class="btn center-block btn-info" href="@Url.Action("ListAll", "Smartphones")">Виж още смартфони</a></p>
</div>
<hr />
<br />
<div class="well">
    <h1 class="text-danger"><strong>ТОП 6 Най-популярни лаптопи:</strong></h1>
</div>

<div class="row">

    @for (int i = 0; i < Model.LaptopViewModel.Count(); i++)
    {

        var laptop = Model.LaptopViewModel.ElementAt(i);

        <div class="col-md-4 panel-primary">
            <p><a href="@Url.Action("Details", "Laptop", new { laptop.Id })"><img class="center-block img-responsive" src="@laptop.ImageUrl" /></a></p>
            <a href="@Url.Action("Details", "Laptop", new { laptop.Id })"><h3 class="text-center">@laptop.Manufacturer @laptop.Model</h3></a>
            <h5 class="text-center"><strong>(@laptop.Votes гласа)</strong></h5>
            <div class="row">
                <div class="col-lg-3"></div>
                <div class="col-lg-9">
                    <h6 class="text-left"><span class="glyphicon glyphicon-ok text-success"></span><strong> @laptop.ProcessorInfo</strong></h6>
                    <h6 class="text-left"><span class="glyphicon glyphicon-ok text-success"></span><strong> @laptop.VideoCardInfo</strong></h6>
                    <h6 class="text-left"><span class="glyphicon glyphicon-ok text-success"></span><strong> @laptop.RAMInfo</strong></h6>
                    <h6 class="text-left"><span class="glyphicon glyphicon-ok text-success"></span><strong> @laptop.HDDInfo</strong></h6>
                </div>                 
            </div>            
            <hr />
            <p><a class="btn center-block btn-danger" href="@Url.Action("Details", "Laptop", new { laptop.Id })">Цена: @laptop.Price лв.</a></p>
        </div>

        if (i > 0 && (i + 1) % 3 == 0)
        {
            @:</div>
        @:<div class="row">
    }
    }
</div>
<br />
<div>
    <p><a class="btn center-block btn-warning" href="@Url.Action("ListAll", "Laptops")">Виж още лаптопи</a></p>
</div>
